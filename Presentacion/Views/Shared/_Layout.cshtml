<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Labsys</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/all.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>

    @* Navbar *@

    <nav class="nav navbar-expand-lg navbar-dark bg-dark">
        <div>
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link nav-tabs" href="@Url.Action("Index", "Home")">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-tabs" href="@Url.Action("Index", "Pacientes")">Pacientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-tabs" href="@Url.Action("Index", "EstudiosClinicos")">Estudios Clinicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-tabs" href="@Url.Action("Index", "Tecnicos")">Tecnicos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link nav-tabs" href="@Url.Action("Index", "Turnos")">Turnos</a>
                </li>

            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <center>
                <div class="text-center">

                    &copy; @DateTime.Now.Year - Labsys
                    <br />
                    All Rights Reserved.
                </div>
            </center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
