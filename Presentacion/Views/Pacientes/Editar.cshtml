@model Presentacion.ViewModels.Pacientes.EditarPacienteViewModel

@{
                /**/

                ViewBag.Title = "Editar Paciente";
}

@section scripts {

    @*Scripts*@
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />


    <script>
        $(function () {
            $('input[name="FechaNacimiento"]').daterangepicker({

                singleDatePicker: true,
                startDate: moment().endOf("day").format('DD/MM/YYYY'),
                endDate: moment().format('DD/MM/YYYY'),
                locale: {
                    format: 'DD/MM/YYYY',
                    dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
                    dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié;', 'Juv', 'Vie', 'Sáb'],
                    daysOfWeek: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
                    monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
                    monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic']
                },
                firstDay: 1,
                showDropdowns: true,
                minYear: 1901,
                maxDate: moment().endOf("day"),
            }, function (start, end, label) { });
        });
    </script>

}


<h3 class="text-center">Editar los datos: </h3>


@using (Html.BeginForm("Editar", "Pacientes", FormMethod.Post))
{
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
            <div class="form-group">

                @Html.HiddenFor(model => model.Id)

                <label>Nombre</label>
                @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control required", placeholder = "Tu nombre" })
                @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Apellido</label>@Html.TextBoxFor(x => x.Apellido, new { @class = "form-control required", placeholder = "Tu apellido" })
                @Html.ValidationMessage("Apellido", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Dni</label>@Html.TextBoxFor(x => x.Dni, new { @class = "form-control required", type = "number" })
                @Html.ValidationMessage("Dni", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Fecha de nacimiento</label>@Html.TextBoxFor(x => x.FechaNacimiento, new { @class = "form-control required" })
                @Html.ValidationMessage("FechaNacimiento", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-success pull-left">Confirmar</button>
            <button type="button" class="btn btn-secondary pull-right" onclick="location.href='@Url.Action("Index", "Pacientes")'">Cancelar</button>

            @Html.ValidationMessage("", new { @class = "text-danger" })
        </div>
    </div>
}







