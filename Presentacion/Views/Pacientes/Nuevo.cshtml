@model Presentacion.ViewModels.Pacientes.NuevoPacienteViewModel

@{
    ViewBag.Title = "Nuevo Paciente";
}


@*Scripts*@
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

@section scripts {
    <script>
        $(function () {
            $('input[name="birthday"]').daterangepicker({
                dateFormat: "dd-mm-yyyy",
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 1901,
                maxYear: parseInt(moment().format('YYYY'), 10)
            }, function (start, end, label) {
                var years = moment().diff(start, 'years');
            });
        });
    </script>
}

<div class="container">
    <div class="row">

        <h1 class="text-center"><a href="#myModal" role="button" class="btn btn-primary btn-lg" data-toggle="modal">Nuevo Paciente</a></h1>

    </div>
</div>

@using (Html.BeginForm("Nuevo", "Pacientes", FormMethod.Post))
{
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Ingrese los datos: </h3>
                </div>
                <div class="modal-body">

                    <div class="form-group"><label>Nombre</label>@Html.TextBoxFor(x => x.Nombre, new { @class = "form-control required", placeholder = "Tu nombre" })</div>
                    <div class="form-group"><label>Apellido</label>@Html.TextBoxFor(x => x.Apellido, new { @class = "form-control required", placeholder = "Tu apellido" })</div>
                    <div class="form-group"><label>Dni</label>@Html.TextBoxFor(x => x.Dni, new { @class = "form-control required", placeholder = "Tu dni" })</div>
                    <div class="form-group"><label>Fecha de nacimiento</label>@Html.TextBoxFor(x => x.Nombre, new { @class = "form-control required", name = "birthday", placeholder = "01/01/1900" })</div>

                    <div class="form-group"><button href="/Pacientes/Index" type="submit" class="btn btn-success pull-right">Confirmar</button> <p class="help-block pull-left text-danger hide" id="form-error">&nbsp; The form is not valid. </p></div>

                </div>
                    <div class="modal-footer">
                        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    }
