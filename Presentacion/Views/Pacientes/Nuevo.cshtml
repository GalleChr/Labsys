@model Presentacion.ViewModels.Pacientes.NuevoPacienteViewModel

@{
    ViewBag.Title = "Nuevo Paciente";
}


@*Scripts*@
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />


    <script>
        $(function () {
            $('input[name="birthday"]').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 1901,
                maxYear: parseInt(moment().format('YYYY'), 10)
            }, function (start, end, label) {
                var years = moment().diff(start, 'years');
            });
        });
    </script>


    <div class="container">
        <div class="row">

            <h1 class="text-center"><a href="#myModal" role="button" class="btn btn-primary btn-lg" data-toggle="modal">Nuevo Paciente</a></h1>

        </div>
    </div>

    <div id="myModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 id="myModalLabel">Ingrese los datos: </h3>
                </div>  
                <div class="modal-body">
                    <form class="form-horizontal col-sm-12">
                        @using (Html.BeginForm("Nuevo", "Pacientes", FormMethod.Post))
                        {
                    <div class="form-group"><label>Nombre</label><input class="form-control required" placeholder="Ingrese Nombre" data-placement="top" data-trigger="manual" data-content="Debe contener al menos 3 caracteres y no contener numeros" type="text"></div>
                        <div class="form-group"><label>Apellido</label><input class="form-control required" placeholder="Ingrese Apellido" data-placement="top" data-trigger="manual" data-content="Debe contener al menos 3 caracteres y no contener numeros" type="text"></div>
                        <div class="form-group"><label>Dni</label><input class="form-control required" placeholder="Ingrese Dni" data-placement="top" data-trigger="manual" data-content="Debe contener unicamente numeros" type="text"></div>
                        <div class="form-group"><label>Fecha de Nacimiento</label><input class="form-control glyphicon-calendar" name="birthday" placeholder="01/01/1900" data-placement="top" data-trigger="manual" data-content="Debe ser mayor de 5 años" type="text"></div>
                        <div class="form-group"><button href="/Pacientes/Index" type="submit" class="btn btn-success pull-right">Confirmar</button> <p class="help-block pull-left text-danger hide" id="form-error">&nbsp; The form is not valid. </p></div>
                        }
                    </form>
                </div>
                <div class="modal-footer">
                    <button href="@Url.Action("Index","Pacientes")" class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
