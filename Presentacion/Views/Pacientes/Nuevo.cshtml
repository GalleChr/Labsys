@model Presentacion.ViewModels.Pacientes.NuevoPacienteViewModel

@{
    ViewBag.Title = "Nuevo Paciente";
}


@*Scripts*@
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />



<script>
    $(function () {
        $('input[name="FechaNacimiento"]').daterangepicker({
            singleDatePicker: true,
            showDropdowns: true,
            minYear: 1901,
            maxYear: parseInt(moment().format('YYYY'), 10)
        }, function (start, end, label) {
            var years = moment().diff(start, 'years');
        });
    });
</script>




<div class="container">
    <div class="row">

        <h1 class="text-center"><a href="#newModal" role="button" class="btn btn-primary btn-lg" data-toggle="modal">Nuevo Paciente</a></h1>

    </div>
</div>

<div id="newModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="newModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="newModalLabel">Ingresa los datos:</h3>
            </div>
            @using (Html.BeginRouteForm("Pacientes_Nuevo", FormMethod.Post))
            {
                <div class="modal-body">
                    <form class="form-horizontal col-sm-12">
                        <div class="form-group"><label>Nombre</label><input class="form-control required" placeholder="Tu nombre" data-placement="top" data-trigger="manual" data-content="No se deben ingresar numeros." type="text"></div>
                        <div class="form-group"><label>Apellido</label><input class="form-control required" placeholder="Tu apellido" data-placement="top" data-trigger="manual" data-content="No se deben ingresar numeros." type="text"></div>
                        <div class="form-group"><label>Dni</label><input class="form-control required" placeholder="Tu documento" data-placement="top" data-trigger="manual" data-content="Solo se deben ingresar numeros." type="text"></div>
                        <hr><p><label>Fecha de Nacimiento</label><br><input type="text" name="FechaNacimiento" value="01/01/1900" /></p><hr>
                        <div class="form-group"><button type="submit" class="btn btn-success pull-right">Confirmar</button> <p class="help-block pull-left text-danger hide" id="form-error">&nbsp; Los datos no son validos. </p></div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
                </div>
            }
            </div>
    </div>
</div>


