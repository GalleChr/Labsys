@model Dominio.Paciente

@{
                /**/

                ViewBag.Title = "Eliminar";
}

<h2>Eliminar Paciente</h2>

<h3>Seguro que desea eliminar este Paciente?</h3>
<br />
<div>
    <div class="row">
        <div class="col-xs-offset-3 col-xs-6">
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Apellido)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Dni)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Dni)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaNacimiento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color text-center">
                    <input type="submit" value="Eliminar" class="btn btn-success" /> |
                    <a class="btn btn-default" href="@Url.Action("Index", "Pacientes")">
                        Volver a Pacientes
                    </a>
                </div>
            }
        </div>

    </div>
</div>