@model Dominio.Paciente

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar Paciente</h2>

<h3>Seguro que desea eliminar este Paciente?</h3>
<br />
<div>
    <h4>Eliminar Paciente</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Dni)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-outline-dark" /> |
            <a class="btn btn-outline-dark" href="@Url.RouteUrl("Pacientes_Index")">
                Volver a Pacientes
            </a>
        </div>
    }
</div>

